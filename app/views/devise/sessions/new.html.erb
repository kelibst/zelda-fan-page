<main class="container-fluid my-5">
  <div class="col-sm-8 rounded bg-light mx-auto my-4">
  <div class="row">
    <div class="col-6 bg-edit-img">

    </div>
    <div class="col-6">

  <h2 class="display-6 text-secondary font-weight-bolder text-center py-4 text-uppercase ">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-success w-100 my-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
  </div>
  </div>
</main>